.search-content{
  padding:.5em;
}
.header{
  display: flex;position:relative;
  justify-content:space-between;
  align-items: center;
}
.header input{
  padding-left:1em;
}
.search-input{
  background-color:#eee;
  border:1rpx solid whitesmoke;
  border-radius: 10rem;
  padding:.2rem;width:85%;
}
.top-div{
  text-align: center;background: #fff;
  position: absolute;border-radius:20rpx;
  width: 95%;height: 3em;display:flex;
  justify-content:center;align-items: center;
}
.sao{
  margin:0 .5rem;display:flex;
  justify-content:center;align-items: center;
}
.content,.content-Con{
  margin-top:1em;text-align: center;
}
.content-header{
  display:flex;align-items: center;
  justify-content:space-between;
}
.alertCon{
  margin:2% 0 15rpx 0;
}
.searchBtn{
  font-size:11px;
}
