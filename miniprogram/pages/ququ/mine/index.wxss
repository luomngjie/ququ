/* pages/ququ/mine/index.wxss */
.mine{
  padding:.5em;background:pink;
}
page {
  background: #f6f6f6;
  display: flex;padding:.5em;
  flex-direction: column;
  justify-content: flex-start;
}
 
.userinfo{
  margin-top: 40rpx;
  /* height: 140rpx; */
  width: 95%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}
.userinfo-nickname{
  padding:0;
}
.userinfo-nickname::after {
  border: none;
}
.content-header{
  width:95%;background:#fff;
  margin-top:1em;
  display:flex;align-items: center;
  justify-content:space-between;flex-wrap: wrap;
}
.content-header view{
  text-align: center; margin: 10rpx;
}
.view-list{
  width:95%;background:#fff;
  display:flex;
  flex-direction: column ;
  margin-top:1em;
}
.views{
  margin:.3em;border-bottom:1px solid #eee;padding-bottom:.2em;
}
.views text:nth-child(1){
  margin:0 .5em;
}
.views text:last-child{
  float:right;
}
